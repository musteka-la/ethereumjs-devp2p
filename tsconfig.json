{
  "extends": "@ethereumjs/config-tsc",
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "examples/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": [
        "definitions/*"
      ]
    },
    "typeRoots": [
      "definitions",
      "node_modules/@types"
    ]
  }
}